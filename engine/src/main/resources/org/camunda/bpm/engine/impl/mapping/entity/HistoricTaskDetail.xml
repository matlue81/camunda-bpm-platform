<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.camunda.bpm.engine.impl.persistence.entity.HistoricTaskDetailEntity">

  <!-- HISTORIC TASK DETAIL INSERT -->

  <insert id="insertHistoricTaskDetailEvent" parameterType="org.camunda.bpm.engine.impl.history.event.HistoricTaskDetailEventEntity">
      insert into ${prefix}ACT_HI_TASK_DETAIL (
        ID_,
        PROC_DEF_ID_,
        PROC_INST_ID_,
        EXECUTION_ID_,
        TASK_ID_,
        USER_ID_,
        TIMESTAMP_,
        OPERATION_ID_ ,
        OPERATION_TYPE_,
        PROPERTY_,
        VALUE_
      ) values (
        #{id ,jdbcType=VARCHAR},
        #{processDefinitionId, jdbcType=VARCHAR},
        #{processInstanceId, jdbcType=VARCHAR},
        #{executionId, jdbcType=VARCHAR},
        #{taskId ,jdbcType=VARCHAR},
        #{userId ,jdbcType=VARCHAR},
        #{timestamp ,jdbcType=TIMESTAMP},
        #{operationId ,jdbcType=VARCHAR},
        #{operationType ,jdbcType=VARCHAR},
        #{property, jdbcType=VARCHAR},
        #{value ,jdbcType=VARCHAR}
      )
  </insert>

  <!-- HISTORIC TASK DETAIL DELETE -->

  <delete id="deleteHistoricTaskDetailsByProcessInstanceId">
    delete from ${prefix}ACT_HI_TASK_DETAIL where PROC_INST_ID_ = #{id}
  </delete>

  <delete id="deleteHistoricTaskDetailsByTaskId">
    delete from ${prefix}ACT_HI_TASK_DETAIL where TASK_ID_ = #{id}
  </delete>

  <!-- HISTORIC TASK DETAIL RESULT MAP -->

  <resultMap id="historicTaskDetailResultMap" type="org.camunda.bpm.engine.impl.persistence.entity.HistoricTaskDetailEntity">
    <id property="id" column="ID_" jdbcType="VARCHAR" />
    <result property="processDefinitionId" column="PROC_DEF_ID_" jdbcType="VARCHAR" />
    <result property="processInstanceId" column="PROC_INST_ID_" jdbcType="VARCHAR" />
    <result property="executionId" column="EXECUTION_ID_" jdbcType="VARCHAR" />
    <result property="taskId" column="TASK_ID_" jdbcType="VARCHAR" />
    <result property="userId" column="USER_ID_" jdbcType="VARCHAR" />
    <result property="timestamp" column="TIMESTAMP_" jdbcType="TIMESTAMP" />
    <result property="operationId" column="OPERATION_ID_" jdbcType="VARCHAR" />
    <result property="operationType" column="OPERATION_TYPE_" jdbcType="VARCHAR" />
    <result property="property" column="PROPERTY_" jdbcType="VARCHAR" />
    <result property="value" column="VALUE_" jdbcType="VARCHAR" />
  </resultMap>

  <!-- HISTORIC TASK DETAIL SELECT -->

  <select id="selectHistoricTaskDetail" resultMap="historicTaskDetailResultMap">
    select * from ${prefix}ACT_HI_TASK_DETAIL where ID_ = #{historicTaskDetailId}
  </select>

  <select id="selectHistoricTaskDetailsByQueryCriteria" parameterType="org.camunda.bpm.engine.impl.HistoricTaskDetailQueryImpl" resultMap="historicTaskDetailResultMap">
    ${limitBefore}
    select RES.* ${limitBetween}
    <include refid="selectHistoricTaskDetailsByQueryCriteriaSql"/>
    ${orderBy}
    ${limitAfter}
  </select>

  <select id="selectHistoricTaskDetailCountByQueryCriteria" parameterType="org.camunda.bpm.engine.impl.HistoricTaskDetailQueryImpl" resultType="long">
    select count(RES.*)
    <include refid="selectHistoricTaskDetailsByQueryCriteriaSql"/>
  </select>

  <sql id="selectHistoricTaskDetailsByQueryCriteriaSql">
    from ${prefix}ACT_HI_TASK_DETAIL RES
    <where>
      <if test="processDefinitionId != null">
        RES.PROC_DEF_ID_ = #{processDefinitionId}
      </if>
      <if test="processInstanceId != null">
        and RES.PROC_INST_ID_ = #{processInstanceId}
      </if>
      <if test="executionId != null">
        and RES.EXECUTION_ID_ = #{executionId}
      </if>
      <if test="taskId != null">
        and RES.TASK_ID_ = #{taskId}
      </if>
      <if test="userId != null">
        and RES.USER_ID_ = #{userId}
      </if>
      <if test="operationId != null">
        and RES.OPERATION_ID_ = #{operationId}
      </if>
      <if test="operationType != null">
        and RES.OPERATION_TYPE_ = #{operationType}
      </if>
      <if test="property != null">
        and RES.PROPERTY_ = #{property}
      </if>
    </where>
  </sql>

</mapper>
