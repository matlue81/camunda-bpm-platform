<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.camunda.bpm.engine.impl.persistence.entity.HistoricTaskDetailEntity">

  <!-- HISTORIC TASK DETAIL INSERT -->

  <insert id="insertHistoricTaskDetailEvent" parameterType="org.camunda.bpm.engine.impl.history.event.HistoricTaskDetailEventEntity">
      insert into ${prefix}ACT_HI_TASK_DETAIL (
        ID_,
        PROC_DEF_ID_,
        PROC_INST_ID_,
        EXECUTION_ID_,
        TASK_ID_,
        USER_ID_,
        TIMESTAMP_,
        OPERATION_ID_ ,
        OPERATION_TYPE_,
        STRING_VALUE_ ,
        DATE_VALUE_
      ) values (
        #{id ,jdbcType=VARCHAR},
        #{processDefinitionId, jdbcType=VARCHAR},
        #{processInstanceId, jdbcType=VARCHAR},
        #{executionId, jdbcType=VARCHAR},
        #{taskId ,jdbcType=VARCHAR},
        #{userId ,jdbcType=VARCHAR},
        #{timeStamp ,jdbcType=TIMESTAMP},
        #{operationId ,jdbcType=VARCHAR},
        #{operationType ,jdbcType=VARCHAR},
        #{stringValue ,jdbcType=VARCHAR},
        #{dateValue ,jdbcType=TIMESTAMP}
      )
  </insert>

  <!-- HISTORIC TASK DETAIL RESULT MAP -->

  <resultMap id="historicTaskDetailResultMap" type="org.camunda.bpm.engine.impl.persistence.entity.HistoricTaskDetailEntity">
    <id property="id" column="ID_" jdbcType="VARCHAR" />
    <result property="processDefinitionId" column="PROC_DEF_ID_" jdbcType="VARCHAR" />
    <result property="processInstanceId" column="PROC_INST_ID_" jdbcType="VARCHAR" />
    <result property="executionId" column="EXECUTION_ID_" jdbcType="VARCHAR" />
    <result property="taskId" column="TASK_ID_" jdbcType="VARCHAR" />
    <result property="userId" column="USER_ID_" jdbcType="VARCHAR" />
    <result property="timeStamp" column="TIMESTAMP_" jdbcType="TIMESTAMP" />
    <result property="operationId" column="OPERATION_ID_" jdbcType="VARCHAR" />
    <result property="operationType" column="OPERATION_TYPE_" jdbcType="VARCHAR" />
    <result property="stringValue" column="STRING_VALUE_" jdbcType="VARCHAR" />
    <result property="dateValue" column="DATE_VALUE_" jdbcType="TIMESTAMP" />
  </resultMap>

  <!-- HISTORIC TASK DETAIL SELECT -->

  <select id="selectHistoricTaskDetail" resultMap="historicTaskDetailResultMap">
    select * from ${prefix}ACT_HI_TASK_DETAIL where ID_ = #{historicTaskDetailId}
  </select>

  <select id="selectHistoricTaskDetailIdsByProcessInstanceId" resultType="string" parameterType="org.camunda.bpm.engine.impl.db.ListQueryParameterObject" >
    select ID_
    from ${prefix}ACT_HI_TASK_DETAIL
    where PROC_INST_ID_ = #{parameter}
  </select>

</mapper>
